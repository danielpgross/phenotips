  <title>Creating a family</title>
  <comment/>
  <minorEdit>false</minorEdit>
  <syntaxId>xwiki/2.1</syntaxId>
  <hidden>false</hidden>
  <content>{{velocity}}
  #if ("$!{request.patient_id}" != '')
    {{html wiki="true"}}
      &lt;form&gt;
  	{{warning}}
            * The pedigree is shared by all members of this family.
            * Patient records may have collaborators. Adding an existing patient to this family will grant all collaborators from that patient access to all family members' records. Also, all collaborators will be able to edit that patient's record.
        {{/warning}}
     	&lt;p class="buttonwrapper" style="text-align:center;"&gt;
     	  &lt;input type="submit" class="button" value="Confirm"&gt;
     	&lt;p&gt;
     	&lt;input type="hidden" value="$!{request.patient_id}" name="patient_id"&gt;
     	&lt;input type="hidden" value="true" name="confirmation"&gt;
      &lt;/form&gt;
    {{/html}}
    #if ("$!{request.confirmation}" == 'true')
	  #set ($family = $services.family.createFamily($request.patient_id))
	  #if ("$!{family}" != '')
	    $response.sendRedirect($xwiki.getURL($family, 'edit'))
	  #else
	    $response.sendRedirect($xwiki.getURL("data.${request.patient_id}", 'edit'))
	  #end
	#end
  #end
{{/velocity}}</content>
